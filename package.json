{
  "name": "archbuilder-website",
  "version": "1.1.0",
  "description": "ArchBuilder.AI - Official Website",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" \"scripts/**/*.{js,ts,mjs}\"",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx,js,jsx}\" \"scripts/**/*.{js,ts,mjs}\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:firebase": "npm run build && firebase deploy --only hosting",
    "dev:firebase": "firebase emulators:start --only hosting",
    "performance:test": "npm run build && node scripts/performance-test.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "deploy:firebase": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-firebase.ps1",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=.next",
    "deploy:vercel": "npm run build && vercel --prod"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.3.2",
    "@tanstack/react-query": "^5.62.8",
    "@tanstack/react-query-devtools": "^5.62.8",
    "@stripe/stripe-js": "^2.1.11",
    "axios": "^1.6.0",
    "clsx": "^2.1.1",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0",
    "framer-motion": "^11.11.17",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.462.0",
    "next": "15.5.4",
    "next-firebase-auth-edge": "^1.7.0",
    "next-intl": "^4.3.9",
    "next-themes": "^0.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^14.5.0",
    "tailwind-merge": "^3.3.1",
    "zustand": "^4.5.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.4",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
